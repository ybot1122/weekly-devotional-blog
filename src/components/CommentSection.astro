<style>
  .comment-section {
    margin-top: 2em;
    padding: 1em;
    background: #f9f9f9;
    border-radius: 8px;
  }
  .comment {
    border-bottom: 1px solid #e2e8f0;
    padding: 1em 0;
  }
  .comment:last-child {
    border-bottom: none;
  }
  .comment-author {
    font-weight: bold;
    color: #2b6cb0;
  }
  .comment-date {
